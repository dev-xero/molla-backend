{
    "compilerOptions": {
        "target": "es2016",
        "rootDir": "./src",
        "module": "ESNext",
        "outDir": "./build",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@database/*": ["database/*"],
            "@config/*": ["config/*"],
            "@util/*": ["util/*"]
        },
        "strict": true
    },
    "exclude": ["README.md"]
}
