{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "strict": true
    },
    "exclude": ["README.md"]
}
