{
    "compilerOptions": {
        "target": "es2016",
        "rootDir": "./src",
        "module": "ESNext",
        "outDir": "./build",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["../*"],
            "@config/*": ["config/*"],
            "@database/*": ["database/*"],
            "@data/*": ["data/*"],
            "@model/*": ["model/*"],
            "@util/*": ["util/*"],
            "@secret/*": ["secret/*"]
        },
        "strict": true,
    },
    "exclude": ["README.md"]
}
